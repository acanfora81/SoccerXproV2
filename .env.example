# C:\Progetti\SoccerXpro_V2\.env.example
# Copia questo file come .env e configura i valori reali

# ===========================================
# üåê APPLICAZIONE
# ===========================================
NODE_ENV=development
PORT=3000
APP_NAME=SoccerXpro_V2
APP_VERSION=0.1.0

# ===========================================
# üóÑÔ∏è DATABASE
# ===========================================
# PostgreSQL Database URL
DATABASE_URL="postgresql://username:password@localhost:5432/soccerxpro_v2"

# Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=soccerxpro_v2
DB_USERNAME=your_username
DB_PASSWORD=your_password

# ===========================================
# üîê AUTENTICAZIONE
# ===========================================
# JWT Secret (genera una stringa casuale sicura)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session secret
SESSION_SECRET=your_session_secret_here

# ===========================================
# üìß EMAIL (opzionale)
# ===========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email templates
EMAIL_FROM=noreply@soccerxpro.com
EMAIL_FROM_NAME=SoccerXpro V2

# ===========================================
# üî¥ REDIS (opzionale)
# ===========================================
# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600

# ===========================================
# üìÅ FILE STORAGE
# ===========================================
# Upload settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# AWS S3 (se usi cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=soccerxpro-uploads

# ===========================================
# üìä LOGGING & MONITORING
# ===========================================
# Log levels: error, warn, info, debug
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Enable/disable specific log types
LOG_ENABLE_API=true
LOG_ENABLE_DATABASE=true
LOG_ENABLE_AUTH=true
LOG_ENABLE_PERFORMANCE=true

# ===========================================
# üß™ TESTING
# ===========================================
# Test Database
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/soccerxpro_v2_test"

# E2E Testing
E2E_BASE_URL=http://localhost:3000
E2E_HEADLESS=true

# ===========================================
# üîß DEVELOPMENT
# ===========================================
# Hot reload
VITE_HMR=true

# API Base URL
VITE_API_BASE_URL=http://localhost:3001/api

# Enable dev tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_STORYBOOK=true

# ===========================================
# üöÄ PRODUCTION (solo per produzione)
# ===========================================
# Production database
# DATABASE_URL="postgresql://prod_user:prod_password@prod_host:5432/soccerxpro_v2_prod"

# Security headers
# HELMET_ENABLED=true
# CORS_ORIGIN=https://yourdomain.com

# SSL
# SSL_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ===========================================
# üåç INTERNAZIONALIZZAZIONE
# ===========================================
DEFAULT_LANGUAGE=it
SUPPORTED_LANGUAGES=it,en,es

# ===========================================
# üìà ANALYTICS (opzionale)
# ===========================================
# Google Analytics
# GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# ===========================================
# üéØ FEATURE FLAGS
# ===========================================
# Enable/disable features
FEATURE_MARKET_MODULE=true
FEATURE_MEDICAL_MODULE=true
FEATURE_ADMINISTRATION_MODULE=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_REAL_TIME_NOTIFICATIONS=true

# ===========================================
# üì± API RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# üîí SECURITY
# ===========================================
# CORS settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Content Security Policy
CSP_ENABLED=true

# ===========================================
# üìã BUSINESS LOGIC
# ===========================================
# Contract settings
DEFAULT_CONTRACT_DURATION_YEARS=2
MAX_CONTRACT_DURATION_YEARS=5

# Medical settings  
INJURY_FOLLOWUP_DAYS=7
MEDICAL_REPORT_RETENTION_YEARS=10

# Financial settings
DEFAULT_CURRENCY=EUR
BUDGET_FISCAL_YEAR_START=07-01